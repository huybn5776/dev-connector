{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@core/*": ["../../core/src/*"],
      "@dtos/*": ["../../core/src/dtos/*"],
      "@exceptions/*": ["../../core/src/exceptions/*"],
      "@exceptions": ["../core/src/exceptions"],
      "@interfaces/*": ["../../core/src/interfaces/*"],
      "@utils/*": ["../../core/src/utils/*"],
      "@controllers/*": ["controllers/*"],
      "@databases": ["databases"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "class-transformer": ["../../core/node_modules/class-transformer"]
    }
  },
  "include": ["../core/**.*.ts", "src/**/*.ts", "src/**/*.json", ".env"],
  "exclude": ["node_modules"]
}

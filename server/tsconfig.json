{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["../core/src/*"],
      "@dtos/*": ["../core/src/dtos/*"],
      "@entities/*": ["../core/src/entities/*"],
      "@exceptions/*": ["../core/src/exceptions/*"],
      "@exceptions": ["../core/src/exceptions"],
      "@interfaces/*": ["../core/src/interfaces/*"],
      "@utils/*": ["../core/src/utils/*"],
      "@controllers/*": ["src/controllers/*"],
      "@databases": ["src/databases"],
      "@middlewares/*": ["src/middlewares/*"],
      "@mappers": ["src/mappers"],
      "@mappers/*": ["src/mappers/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@tests/*": ["tests/*"],
      "class-transformer": ["/../server/node_modules/class-transformer"]
    }
  },
  "include": ["../core/**.*.ts", "src/**/*.ts", "src/**/*.json", ".env"],
  "exclude": ["node_modules"]
}

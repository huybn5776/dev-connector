{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["../core/src/*"],
      "@dtos/*": ["../core/src/dtos/*"],
      "@exceptions/*": ["../core/src/exceptions/*"],
      "@exceptions": ["../core/src/exceptions"],
      "@interfaces/*": ["../core/src/interfaces/*"],
      "@actions": ["src/store/actions"],
      "@components/*": ["src/components/*"],
      "@services/*": ["src/services/*"],
      "@store": ["src/store"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src",
    "vite.config.ts"
  ]
}
